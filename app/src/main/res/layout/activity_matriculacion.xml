<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_matriculacion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"
    tools:context="murgiproject.www.iesmurgi.org.murgiprojectv2.Matriculacion">


    <TextView
        android:text="@string/fpBasicaTitulo"
        android:layout_width="297dp"
        android:layout_height="54dp"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:layout_marginTop="32dp"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />


    <TextView
        android:text="@string/fpbasica1"
        android:layout_width="0dp"
        android:layout_height="144dp"
        android:id="@+id/textView3"
        android:textSize="20sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAlignment="center" />

    <TextView
        android:text="@string/fpbasica2"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:id="@+id/textView4"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAlignment="center" />

    <TextView
        android:text="@string/fpbsica3"
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:textSize="20sp"
        android:id="@+id/textView5"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAlignment="center"
        />

    <TextView
        android:text="@string/fpbsica4"
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:id="@+id/link1"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAlignment="center" />

    <TextView
        android:text="@string/fpmedioTitulo"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:id="@+id/link3"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/link1"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAlignment="center" />


</android.support.constraint.ConstraintLayout>
