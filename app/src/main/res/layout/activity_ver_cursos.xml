<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ver_cursos"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="murgiproject.www.iesmurgi.org.murgiprojectv2.VerCursos">


<ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/sele_bachi"
    android:id="@+id/btn_irBachillerato"
    android:layout_marginBottom="80dp"
    android:scaleType="centerInside"
    android:layout_gravity="center"
    android:background="@color/blanco"
    android:elevation="24dp"

    />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fpbasica"
        android:id="@+id/btn_irFpBasico"
        android:layout_marginBottom="80dp"
        android:scaleType="centerInside"
        android:layout_gravity="center"
        android:background="@color/blanco"
        android:elevation="24dp"
        />



    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fpmedio"
        android:id="@+id/btn_irGradoMedio"
        android:layout_marginBottom="80dp"
        android:scaleType="centerInside"
        android:layout_gravity="center"
        android:background="@color/blanco"
        android:elevation="24dp"
        />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fpgs"
        android:id="@+id/btn_irGradoSuperior"
        android:layout_marginBottom="80dp"
        android:scaleType="centerInside"
        android:layout_gravity="center"
        android:background="@color/blanco"
        android:elevation="24dp"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/eoidiomas"
        android:id="@+id/btn_irEscuelaIdiomas"
        android:layout_marginBottom="16dp"
        android:scaleType="centerInside"
        android:layout_gravity="center"
        android:background="@color/blanco"
        android:elevation="24dp"

        />




</LinearLayout>
</ScrollView>