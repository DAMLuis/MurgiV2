<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">
    <!--cambiar la imagen -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/portada">
        <!--cambiar l aposicion del texto-->
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="IES MURGI"
               android:gravity="center"
               android:layout_alignParentBottom="true"
               android:layout_marginRight="20dp"
               android:layout_marginBottom="10dp"
               android:layout_marginLeft="20dp"
               android:textColor="#ffffff"
               android:textSize="40dp"/>
    </RelativeLayout>
    <!--cambiar el color d elos botones y el dibujo que tiene-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/boton_ies_murgi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:src="@drawable/historia_cambio"
            android:scaleType="centerInside"
            android:baselineAlignBottom="true" />

        <ImageButton
            android:id="@+id/boton_contacto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:background="@color/colorPrimary"
            android:src="@drawable/contacto_cambio"
            />

        <ImageButton
            android:id="@+id/boton_matriculacion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:background="@color/colorPrimary"
            android:src="@drawable/matricula_cambio" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/colorPrimary"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="40dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/boton_mapa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:src="@drawable/mapa_cambio" />

        <ImageButton
            android:id="@+id/boton_cursos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:src="@drawable/cursos_cambio"
            />

        <ImageButton
            android:id="@+id/boton_cita"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:background="@color/colorPrimary"
            android:src="@drawable/cita_cambio" />


    </LinearLayout>

   </LinearLayout>

