<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Verde4"
    android:orientation="vertical">
    <!--cambiar la imagen -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/portada">
        <!--cambiar l aposicion del texto-->
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="IES MURGI"
               android:id="@+id/textoInicio"
               android:gravity="center"
               style="@style/textoInicio"
               android:textSize="40dp"/>
    </RelativeLayout>
    <!--cambiar el color d elos botones y el dibujo que tiene-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/Verde9"
            android:layout_weight="1"
           >

        <ImageButton
            android:id="@+id/boton_ies_murgi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/botonesFotos"
            android:background="@color/Verde9"
            android:src="@drawable/historia_cambio"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/textoFotos"
            android:text="Historia"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/Verde7"
            android:layout_weight="1"
            >

        <ImageButton
            android:id="@+id/boton_contacto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/botonesFotos"
            android:background="@color/Verde7"
            android:src="@drawable/contacto_cambio"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contactos"
                style="@style/textoFotos"
                />
        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
            android:background="@color/Verde10"
                android:layout_weight="1"
            >

        <ImageButton
            android:id="@+id/boton_matriculacion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/botonesFotos"
            android:src="@drawable/matricula_cambio" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/textoFotos"
                    android:text="MatrÃ­cula"
                    />
            </LinearLayout>
    </LinearLayout>
    <!--linea de abajo-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/Verde4"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/Verde4"
            android:layout_weight="1">
        <ImageButton
            android:id="@+id/boton_mapa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/botonesFotos"
            android:src="@drawable/mapa_cambio" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textoFotos"
                android:text="Mapa"
                />
        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/Verde8"
                android:layout_weight="1"
                >
        <ImageButton
            android:id="@+id/boton_cursos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/botonesFotos"
            android:src="@drawable/cursos_cambio"
            />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/textoFotos"
                    android:text="Cursos"

                    />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/Verde7"
                    android:layout_weight="1">
        <ImageButton
            android:id="@+id/boton_cita"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/botonesFotos"
            android:src="@drawable/cita_cambio" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/textoFotos"
                        android:text="Cita"
                        />
                </LinearLayout>

    </LinearLayout>

   </LinearLayout>

