<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_historia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="murgiproject.www.iesmurgi.org.murgiprojectv2.Historia">

    <ImageView
        android:id="@+id/img_cabecera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/loog_murgi"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/texto_cabecera"
        android:layout_width="240dp"
        android:layout_height="34dp"
        android:text="@string/historia_cabecera"
        android:textColor="@color/colorTitulo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="52dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/cabecera_descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/historia_cabecera_descripcion"
        android:textColor="@color/colorSubtitulo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="66dp"
        app:layout_constraintTop_toBottomOf="@+id/texto_cabecera"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/texto_descripcion"
        android:layout_width="wrap_content"
        android:layout_height="82dp"
        android:text="@string/historia_texto_descripcion"
        android:textColor="@color/colorTitulo"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="32dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/cabecera_descripcion"
        android:textAlignment="center" />


    <TextView
        android:id="@+id/cabecera_localizacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/historia_cabecera_localizacion"
        android:textColor="@color/colorSubtitulo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/texto_descripcion" />

    <TextView
        android:id="@+id/texto_localizacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/historia_texto_localizacion"
        android:textColor="@color/colorTitulo"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cabecera_localizacion"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>
